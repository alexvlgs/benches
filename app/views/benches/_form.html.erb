<div class="container">
	<%= simple_form_for (@bench) do |f| %>
		<%= f.error_notification %>

		<% if @bench.errors.any? %>
			<h4> Please fix your errors </h4>
			<ul>
				<% @bench.errors.full_messages.each do |message| %>
					<li> <%= message %></li>
				<% end %>
			</ul>
		<% end %>

		<div class="form-inputs">
			<%= f.input :name %>
			<%= f.input :location %>
			<%= f.input :city %>
		</div>

		<div class="form-actions">
			<%= f.button :submit %>
		</div>
	<% end %>
</div>
