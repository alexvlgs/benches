<div class="container">
  <h1> About this bench </h1>
    <br>
    <%= image_tag "miradour.jpg", height: 300, width: 300 %>
  <br>
  <br>
  <h3> <%= @bench.name.capitalize %> </h3>
  <p> Address: <%= @bench.location %> </p>
  <p> City: <%= @bench.city %> </p>
  <p> Rating: <%= @bench.score %> </p>
  <br>
    <div class="action">
    <%= link_to 'review', new_bench_review_path(@bench), class: 'btn' %>
    <%= link_to 'book', new_bench_booking_path(@bench), class: 'btn-outline' %>
    </div>
  <h3>Reviews</h3>
  <% if @bench.reviews.empty? %>
    <p>Be the first to let a review</p>

  <% else %>
  
    <ul class="list-group">
    <div class="scroll">
      <% @bench.reviews.each do |review| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span class="badge badge-pill">
            <% review.rating.to_i.times do %>
              <%= image_tag "butt.png", height: 25, width: 25%>
            <% end %>
          </span>
          <span><strong>
          Author:
          <%= review.user.first_name %>
          <%= review.user.last_name %>
          </span></strong>
          <%= review.description %>
        </li>
      <% end %>
    </div>
    </ul>
  <% end %>


<br>
<br>
<%= link_to "Back to all benches", benches_path, class: "btn-small" %>
</div>


